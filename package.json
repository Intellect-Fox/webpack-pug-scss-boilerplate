{
  "name": "webpack-pug-scss-boilerplate",
  "version": "1.0.0",
  "description": "Webpack boilerplate for pug+scss/sass development",
  "main": "src/js/index.js",
  "scripts": {
    "start": "webpack-dev-server --config config/webpack.dev.js",
    "build": "webpack --config config/webpack.prod.js",
    "prettier": "prettier --write .",
    "stylelint": "stylelint 'src/**/*.{css,sass,scss}'",
    "eslint": "eslint src",
    "lint": "npm-run-all --parallel prettier stylelint eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Intellect-Fox/webpack-pug-scss-boilerplate.git"
  },
  "keywords": [
    "webpack",
    "pug",
    "sass",
    "scss",
    "es6+"
  ],
  "author": "Andrei Bahamolau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Intellect-Fox/webpack-pug-scss-boilerplate/issues"
  },
  "homepage": "https://github.com/Intellect-Fox/webpack-pug-scss-boilerplate#readme",
  "devDependencies": {
    "@prettier/plugin-pug": "^2.2.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pug-plugin": "^4.1.1",
    "sass": "^1.54.4",
    "sass-loader": "^13.0.2",
    "stylelint": "^14.10.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.3.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.10.0",
    "webpack-merge": "^5.8.0"
  }
}
